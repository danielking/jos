.navbar.navbar-toolbar.navbar-default.navbar-fixed-top(ng-controller='NavbarController')
	.navbar-header
		button.navbar-toggle(data-toggle='collapse', data-target='.navbar-collapse')
			span.icon-bar
			span.icon-bar
			span.icon-bar
		a.navbar-brand
			.fa.fa-codepen
			| &nbsp;JediOS
	.collapse.navbar-collapse
		ul.nav.navbar-nav(ng-show='user')
			li(ng-class='{active: $root.desktop.visible}')
				a(ng-click='$root.desktop.visible = true')
					.fa.fa-home
			li(ng-repeat='app in extensions | filter: {open: true}', ng-class='{active: !$root.desktop.visible && $root.app.activated == app}')
				a(ng-click='$root.app.open(app)')
					i(ng-class='app.iconClass')
					| &nbsp; {{ app.name }}
		ul.nav.navbar-nav.pull-right(ng-show='$root.user')
			li
				a
					i.icon-baidu(ng-show='user.mediaType == "baidu"')
					i.icon-qq(ng-show='user.mediaType == "qqdenglu"')
					| &nbsp; {{ user.name }}
			li
				a(ng-click='$root.logout()')
					.fa.fa-power-off

include session
include desktop
